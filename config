################################################################################
############                  MAINBAR-BSPWM                         ############
################################################################################
################################################################################

[bar/mainbar-bspwm]
monitor = ${env:MONITOR}
;monitor-fallback = HDMI1
width = 100%
height = 32
;offset-x = 1%
;offset-y = 1%
;radius = 9.0
fixed-center = true
bottom = false
separator =

wm-restack = bspwm
override-redirect = true

; Enable support for inter-process messaging
; See the Messaging wiki page for more details.
enable-ipc = true

border-size = 0
;border-left-size = 0
;border-right-size = 25
;border-top-size = 0
;border-bottom-size = 25


;https://github.com/jaagr/polybar/wiki/Fonts
font-0 = "Noto Sans:antialias=false:size=18;5"
font-1 = "UbuntuMono Nerd Font:antialias=false:size=30;5"
font-2 = "Font Awesome 5 Free:antialias=false:style=Solid:size=30;5"
font-3 = "DejaVu Sans Mono for Powerline:antialias=false:size=30;5"
font-4 = "Font Awesome 5 Free:antialias=false:style=Regular:size=30;5"

scroll-up = bspwm-desknext
scroll-down = bspwm-deskprev

################################################################################
############                  MAINBAR-HERBSTLUFTWM                  ############
################################################################################
[bar/mainbar-herbstluftwm]
monitor = ${env:MONITOR}
;monitor-fallback = HDMI1
width = 100%
height = 36
;offset-x = 1%
;offset-y = 1%
;radius = 9.0
;fixed-center = true
bottom = false
separator =

wm-restack = bspwm
override-redirect = true
background = #ee0e0e0e
foreground = #D8DEE9


; Enable support for inter-process messaging
; See the Messaging wiki page for more details.
enable-ipc = true

border-size = 0
;border-left-size = 0
;border-right-size = 25
;border-top-size = 0
;border-bottom-size = 25
border-color = #0e0e0e

padding-left = 0
padding-right = 0

module-margin-left = 0
module-margin-right = 0
module-margin-center = 0


;https://github.com/jaagr/polybar/wiki/Fonts
font-0 = "Noto Sans:antialias=false:size=20;5"
font-1 = "UbuntuMono Nerd Font:antialias=false:size=32;7"
font-2 = "Font Awesome 5 Free:antialias=false:style=Solid:size=32;7"
font-3 = "DejaVu Sans Mono for Powerline:antialias=false:size=30;5"
font-4 = "Font Awesome 5 Free:antialias=false:style=Regular:size=22;7"
font-5 = "Font Awesome 5 Brands:antialias=false:size=22;7"

modules-left = ra5 ra3 ewmh ra1 ra3 ra4
modules-center = la4 la3 la1 weather la3 la2 time ra2 ra3 date ra1 ra3 ra4
modules-right = la4 la3 la1 memory2 cpu2 la3 la2 pavolume la6 la5

tray-detached =
tray-offset-x = -1
tray-padding = 3
tray-maxsize = 45
tray-scale = 1.0
tray-position = right
tray-background = #BF616A
tray = right | left
scroll-up = herbstclient use_index -1
scroll-down = herbstclient use_index +1

################################################################################
############                       MODULE BSPWM                     ############
################################################################################

[module/herbstluftwm]
type = internal/bspwm
enable-click = true
enable-scroll = true
fuzzy-match = true
reverse-scroll = true
pin-workspaces = true


icon-0 = 1;
icon-1 = 2;
icon-2 = 3;
icon-3 = 4;
icon-4 = 5;

format = <label-state>

label-monitor = %icon%
label-focused = %icon%
label-focused-background = #8FBCBB
label-focused-padding = 3
label-focused-font = 2
label-focused-foreground = #f10000
label-occupied = %icon%
label-occupied-padding = 3
label-occupied-font = 2
label-occupied-background = #8FBCBB
label-occupied-foreground = #0e0e0e
label-empty = %icon%
label-empty-foreground = #fbfbfb
label-empty-padding = 0
label-empty-font = 0
label-empty-background = #8FBCBB


