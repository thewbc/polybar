###############################################################################
############                       MODULES A-Z
################################################################################
[module/compton]
;https://github.com/jaagr/polybar/wiki/User-contributed-modules#compton
type = custom/script
KEYBINDINGSexec = ~/.config/polybar/scripts/compton.sh
click-left = ~/.config/polybar/scripts/compton-toggle.sh
interval = 5separator =
format-foreground = #0e0e0e
format-background =
################################################################################

[module/cpu2]
;https://github.com/jaagr/polybar/wiki/Module:-cpu
type = internal/cpu
; Seconds to sleep between updates
; Default: 1
interval = 1
format-foreground = #0e0e0e
format-background = #8FBCBB
format-prefix = "   "
format-prefix-foreground = #0e0e0e

label-font = 1

; Available tags:
;   <label> (default)
;   <bar-load>
;   <ramp-load>
;   <ramp-coreload>
format = <label>
; Available tokerbstluftwm]
monitor = ${env:MONITOR}ns:
;   %percentage% (default) - total cpu load
;   %percentage-cores% - load percentage for each core
;   %percentage-core[1-9]% - load percentage for specific core
label = %percentage:3%%
################################################################################
[module/ewmh]
type = internal/xworkspaces
pin-workspaces = true
enable-click = true
enable-scroll = true
reverse-scroll = true

icon-0 = 1;
icon-1 = 2;
icon-2 = 3;
icon-3 = 4;
icon-4 = 5;
format = <label-state>
label-monitor = %icon%

label-active = %icon%
label-active-foreground = #f10000
label-active-background = #8FBCBB
label-active-padding = 3

label-occupied = %icon%
label-occupied-foreground = #ffffff
label-occupied-background = #8FBCBB
label-occupied-padding = 3

label-empty = %icon%
label-empty-foreground = #0e0e0e
label-empty-padding = 3
label-empty-background = #8FBCBB


################################################################################
; ===========
; Time Module
; ===========
[module/time]
type = internal/date
; Update interval
interval = 1.0
; Format
time = %H:%M
; Label
label            = %time%
label-foreground = ${colors.white}
label-background = ${colors.blue}
label-padding    = 2

; ===========
; Date Module
; ===========
[module/date]
type = internal/date
; Update interval
interval = 1.0
; Format
date = %A, %d
; Label
label            = %date%
label-foreground = ${colors.black}
label-background = ${colors.cyan}
label-padding = 2

################################################################################
########################################################################
[module/memory2]
;https://github.com/jaagr/polybar/wiki/Module:-memory
type = internal/memory
interval = 1
; Available tokens:
;   %percentage_used% (default)
;   %percentage_free%
;   %gb_used%
;   %gb_free%
;   %gb_total%
;   %mb_used%
;   %mb_free%
;   %mb_total%
label = "  %percentage_used%%"
format = <label>
format-prefix = "   "
format-prefix-foreground = #0e0e0e
format-foreground = #0e0e0e
format-background = #8FBCBB
################################################################################
[module/pavolume]
type = custom/script
tail = true
label = "  %output% "
exec = ~/.config/polybar/scripts/pavolume.sh --listen
click-right = exec pavucontrol
click-left = ~/.config/polybar/scripts/pavolume.sh --togmute
scroll-up = ~/.config/polybar/scripts/pavolume.sh --up
scroll-down = ~/.config/polybar/scripts/pavolume.sh --down
format-foreground = #0e0e0e
format-background = #5E81AC
################################################################################
; ==============
; Weather Module
; ==============
[module/weather]
type = custom/script
; Script
; Update interval
interval = 600
label            = %output%
label-foreground = ${colors.black}
label-background = ${colors.cyan}
label-padding    = 2
exec = python -u ~/.config/polybar/scripts/weather.py
tail = true
#################################################################################
[module/xwindow]
  ;https://github.com/jaagr/polybar/wiki/Module:-xwindow
type = internal/xwindow
   ; Available tokens:
   ;   %title%
   ; Default: %title%
label = %title:0:20:...%
label-maxlen = 25
format-prefix = "     "
format-prefix-background = #2E3440
format-prefix-foreground = #cc0e0e0e
format-foreground = #cc0e0e0e
format-background = #2E3440

